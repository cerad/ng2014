{# @CeradTourn/Account/Create/AccountCreateForm.html.twig   #}
<form
    id     = "cerad_tourn_account_create"
    class  = "cerad_tourn_account_create cerad_common_form1 app_form"
    action = "{{ path('cerad_tourn_account_create') }}"
    method = "POST" {{ form_enctype(form) }}
    novalidate
>
    <fieldset><legend><span>Create an Account</span></legend>
        {{ form_row(form.fedKey)         }}
        {{ form_row(form.email)          }}
        {{ form_row(form.name)           }}
        {{ form_row(form.password.pass1) }}
        {{ form_row(form.password.pass2,{ 'label': 'Zayso Password (confirm)'}) }}
    </fieldset>
    <fieldset>
        <div class="controls">
            <input type="submit" name="accountCreate" value="Create Zayso Account" />
        </div>
        <div class="controls">
            <span><a href="{{ path('cerad_tourn_welcome') }}">Return to Login</a></span>
        </div>
    </fieldset>
{{ form_rest(form) }}
</form>

