{# @CeradTourn/AccountUser/Login/AccountUserLoginForm.html.twig   #}
<form
    id     = "cerad_tourn_account_login"
    class  = "cerad_tourn_account_login cerad_common_form1 app_form"
    action = "{{ path('cerad_tourn_account_user_login_check') }}"
    method = "post" {{ form_enctype(form) }}
    novalidate
>
    <fieldset><legend><span>Login to Your Account</span></legend>
        {{ form_row(form.username)    }}
        {{ form_row(form.password)    }}
        <!--{{ form_row(form.remember_me) }}-->
        <label id="checkbox_label">
            <input type="checkbox" id="cerad_tourn_account_user_login_remember_me" name="cerad_tourn_account_user_login[remember_me]" required="required" value="1" checked="checked">
            Remember me
        </label>
    </fieldset>
        {% if error %}
            <div id="error">{{ error }}</div>
        {% endif %}
    <fieldset>
        <div class="controls">
            <input type="submit" name="accountLogin" value="Login to Zayso Account" />
            <!--<span><a href="{{ path('cerad_tourn_welcome') }}">Return to Home</a>&nbsp;</span>-->
        </div>
    </fieldset>
{{ form_rest(form) }}
</form>

