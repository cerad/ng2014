{# @CeradTourn/AccountPassword/ResetRequested/AccountPasswordResetRequestedForm.html.twig   #}
<form
    id     = "cerad_tourn_account_password_reset_requested"
    class  = "cerad_tourn_account_password_reset_requested cerad_common_form1 app_form"
    action = "{{ path('cerad_tourn_account_password_reset_requested', { id: user.id }) }}"
    method = "post" {{ form_enctype(form) }}
    novalidate
>
    <fieldset><legend><span>Password Reset</span></legend>
        {{ form_row(form.token)    }}
        {{ form_row(form.password.pass1) }}
        {{ form_row(form.password.pass2, {'label': 'New Password (confirm)'}) }}
    </fieldset>
    <fieldset>
        <div class="controls">
            <input type="submit" name="accountPasswordReseted" value="Set New Password" />
        </div>
        <div class="controls">
            <span><a href="{{ path('cerad_tourn_welcome') }}">Return to Login</a></span>
        </div>
    </fieldset>
{{ form_rest(form) }}
</form>
<div>Token: {{ userToken }}</div>

