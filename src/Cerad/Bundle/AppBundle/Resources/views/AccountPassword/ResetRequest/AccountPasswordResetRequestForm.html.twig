{# @CeradTourn/AccountPassword/ResetRequest/AccountPasswordResetRequestForm.html.twig   #}
<br/>
<form
    id     = "cerad_tourn_account_password_reset_request"
    class  = "cerad_tourn_account_password_reset_request cerad_common_form1 app_form"
    action = "{{ path('cerad_tourn_account_password_reset_request') }}"
    method = "post" {{ form_enctype(form) }}
    novalidate
>
    <fieldset><legend><span>Reset Your Password</span></legend>
        {{ form_row(form.username)    }}
    </fieldset>
    <fieldset>
        <div class="controls">
            <input type="submit" name="accountPasswordReset" value="Reset Your Password" />
        </div>
     </fieldset>
{{ form_rest(form) }}
</form>

