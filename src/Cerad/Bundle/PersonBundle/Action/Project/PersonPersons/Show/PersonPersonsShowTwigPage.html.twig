{% extends '@CeradPerson/Layout.html.twig' %}

{% block content %}

{{ form_start(form) }}
<table class="current-persons">
<tr><th colspan="3">My Crew</th></tr>
<tr><th>Relation</th><th>Name</th><th>Remove</th></tr>
{% for personPersonForm in form.personPersons %}
{% set personPerson = personPersonForm.vars.value['personPerson'] %}
<tr>
  <td>{{ personPerson.role            }}</td>
  <td>{{ personPerson.child.name.full }}</td>
  <td style="text-align: center">{{ form_widget(personPersonForm.remove) }}</td>
</tr>
{% endfor %}
<tr>
    <td style="text-align: right; padding: 10px; border: none;" colspan="3">
      {{ form_widget(form.remove) }}
    </td>
</tr>
</table>
<br />
<table>
<tr><th colspan="2">Add Person</th></tr>
<tr>
    <td>Relation</td>
    <td>{{ form_widget(form.role) }}</td>
</tr>
<tr>
    <td>Person's Full Name</td>
    <td>{{ form_widget(form.name) }}</td>
</tr>
<tr>
    <td style="text-align: right; padding: 10px" colspan="2">
        <a style="padding-right:20px" href="{{ _back }}">Done - Return to Home</a>
        {{ form_widget(form.add)  }}
    </td>
</tr>
</table>
<div style="display:none">{{ form_rest(form) }}</div>
{{ form_end (form) }}
<br />
{% include '@CeradPerson/Project/PersonPersons/Show/PersonPersonsShowTwigHelp.html.twig' %}
{% endblock %}{# content #}